// factorial using fucntion

#include<iostream>
using namespace std;

int fact(int n){
    if(n==0 || n==1){
        return 1;
    }
    else{
        return n*fact(n-1);
    }
}
int main()
{
    cout<<"Enter the number"<<endl;
    int num;
    cin>>num;

    cout<<"Factorial is "<<fact(num);
    return 0;
}
