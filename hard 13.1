#include <iostream>

// Recursive function to calculate Fibonacci sequence
int fibonacci(int n) {
    if (n <= 1)
        return n;
    else
        return fibonacci(n - 1) + fibonacci(n - 2);
}

int main() {
    // Declare variable to store the number of terms in the Fibonacci sequence
    int n;

    // Prompt the user to enter the number of terms
    std::cout << "Enter the number of terms in the Fibonacci sequence: ";
    std::cin >> n;

    // Display the Fibonacci sequence up to the given number of terms
    std::cout << "Fibonacci Sequence:" << std::endl;
    for (int i = 0; i < n; ++i) {
        std::cout << fibonacci(i) << " ";
    }

    return 0;
}
