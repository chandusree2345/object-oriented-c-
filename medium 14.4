#include <iostream>
#include <string>

using namespace std;

class Employee {
private:
    string name;
    double salary;

public:
    // Constructor
    Employee(const string& newName, double newSalary) : name(newName), salary(newSalary) {}

    // Static member function to calculate average salary
    static double calculateAverageSalary(Employee employees[], int size) {
        if (size == 0) {
            return 0; // Return 0 if the array is empty
        }

        double totalSalary = 0;
        for (int i = 0; i < size; ++i) {
            totalSalary += employees[i].salary;
        }
        return totalSalary / size;
    }
};

int main() {
    // Create an array of Employee objects
    const int numEmployees = 3;
    Employee employees[numEmployees] = {
        Employee("John", 50000),
        Employee("Alice", 60000),
        Employee("Bob", 70000)
    };

    // Calculate and display the average salary
    cout << "Average Salary: $" << Employee::calculateAverageSalary(employees, numEmployees) << endl;

    return 0;
}
