#include <iostream>

using namespace std;

class Circle {
private:
    double radius;
    double area;

public:
    // Constructor
    Circle() : radius(0), area(0) {}

    // Member function to set the radius
    void setRadius(double r) {
        radius = r;
    }

    // Member function to calculate the area
    void calculateArea() {
        area = 3.14159 * radius * radius;
    }

    // Member function to display circle details
    void display() const {
        cout << "Circle Details:" << endl;
        cout << "Radius: " << radius << endl;
        cout << "Area: " << area << endl;
    }
};

int main() {
    // Create an instance of the Circle class
    Circle circle;

    // Set the radius
    double radius;
    cout << "Enter the radius of the circle: ";
    cin >> radius;
    circle.setRadius(radius);

    // Calculate the area
    circle.calculateArea();

    // Display circle details
    circle.display();

    return 0;
}
