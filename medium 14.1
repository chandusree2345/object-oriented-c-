#include <iostream>
#include <cmath>

using namespace std;

// Function prototypes
double calculateVolume(double side);
double calculateVolume(double length, double width, double height);
double calculateVolume(double radius, double height);

int main() {
    int choice;
    cout << "Choose a shape to calculate its volume:" << endl;
    cout << "1. Cube" << endl;
    cout << "2. Rectangle" << endl;
    cout << "3. Cylinder" << endl;
    cout << "Enter your choice (1/2/3): ";
    cin >> choice;

    switch (choice) {
        case 1: {
            double side;
            cout << "Enter the side length of the cube: ";
            cin >> side;
            cout << "Volume of the cube: " << calculateVolume(side) << endl;
            break;
        }
        case 2: {
            double length, width, height;
            cout << "Enter the length, width, and height of the rectangle: ";
            cin >> length >> width >> height;
            cout << "Volume of the rectangle: " << calculateVolume(length, width, height) << endl;
            break;
        }
        case 3: {
            double radius, height;
            cout << "Enter the radius and height of the cylinder: ";
            cin >> radius >> height;
            cout << "Volume of the cylinder: " << calculateVolume(radius, height) << endl;
            break;
        }
        default:
            cout << "Invalid choice!" << endl;
    }

    return 0;
}

// Function to calculate volume of a cube
double calculateVolume(double side) {
    return pow(side, 3);
}

// Function to calculate volume of a rectangle
double calculateVolume(double length, double width, double height) {
    return length * width * height;
}

// Function to calculate volume of a cylinder
double calculateVolume(double radius, double height) {
    return M_PI * pow(radius, 2) * height;
}
