#include <iostream>

int main() {
    // Declare variables
    int integerNumber;
    float floatNumber;

    // Prompt the user to enter an integer
    std::cout << "Enter an integer: ";
    std::cin >> integerNumber;

    // Prompt the user to enter a float
    std::cout << "Enter a float: ";
    std::cin >> floatNumber;

    // Perform division of float by integer
    float result = floatNumber / integerNumber;

    // Display the result
    std::cout << "Result of float division by integer: " << result << std::endl;

    return 0;
}
