#include <iostream>

int main() {
    // Declare an integer variable
    int integerVariable = 10;

    // Declare a float variable and assign the integer variable to it
    float floatVariable = integerVariable; // Implicit conversion from int to float

    // Output the values
    std::cout << "Integer Variable: " << integerVariable << std::endl;
    std::cout << "Float Variable: " << floatVariable << std::endl;

    return 0;
}
