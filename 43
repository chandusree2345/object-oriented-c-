
// dynamic array using pointers

#include <iostream>
using namespace std;
int main() {
    // Dynamically allocate an array of 5 integers
    int size = 5;
    int *arr = new int[size];

    // Initialize the array with some values
    for (int i = 0; i < size; ++i) {
        arr[i] = i * 2; // You can set any values you like
    }

    // Display the values in the array
    std::cout << "Values in the dynamic array:" << std::endl;
    for (int i = 0; i < size; ++i) {
        cout << "arr[" << i << "] = " << arr[i] << std::endl;
    }

    // Don't forget to free the allocated memory
    // delete[] arr;

    return 0;
}
