#include <iostream>

using namespace std;

// Function prototype for swapping two integers
void swap(int& a, int& b);

// Function prototype for swapping two arrays of integers
void swap(int arr1[], int arr2[], int size);

int main() {
    int num1 = 5, num2 = 10;
    cout << "Before swapping integers:" << endl;
    cout << "num1: " << num1 << ", num2: " << num2 << endl;
    swap(num1, num2);
    cout << "After swapping integers:" << endl;
    cout << "num1: " << num1 << ", num2: " << num2 << endl;

    int arr1[] = {1, 2, 3};
    int arr2[] = {4, 5, 6};
    int size = sizeof(arr1) / sizeof(arr1[0]);
    cout << "Before swapping arrays:" << endl;
    cout << "Array 1: ";
    for (int i = 0; i < size; ++i) {
        cout << arr1[i] << " ";
    }
    cout << endl << "Array 2: ";
    for (int i = 0; i < size; ++i) {
        cout << arr2[i] << " ";
    }
    cout << endl;
    swap(arr1, arr2, size);
    cout << "After swapping arrays:" << endl;
    cout << "Array 1: ";
    for (int i = 0; i < size; ++i) {
        cout << arr1[i] << " ";
    }
    cout << endl << "Array 2: ";
    for (int i = 0; i < size; ++i) {
        cout << arr2[i] << " ";
    }
    cout << endl;

    return 0;
}

// Function definition for swapping two integers
void swap(int& a, int& b) {
    int temp = a;
    a = b;
    b = temp;
}

// Function definition for swapping two arrays of integers
void swap(int arr1[], int arr2[], int size) {
    for (int i = 0; i < size; ++i) {
        int temp = arr1[i];
        arr1[i] = arr2[i];
        arr2[i] = temp;
    }
}
