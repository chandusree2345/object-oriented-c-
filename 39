//average of elements in an array

#include<iostream>
using namespace std;
int main()
{
    int n,num;
    cout<<"Enter number of elements: "<<endl;
    cin>>n;

    float array[n],sum=0;
    cout<<"Enter elements: \n";
    for(int i=0;i<n;i++){
        cin>>array[i];
    }

    cout<<"Average is: ";
    for(int i=0;i<n;i++){
        sum = sum + array[i];
    }
    cout<<sum/float(n);

    return 0;
}
