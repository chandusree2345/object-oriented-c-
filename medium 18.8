#include <iostream>
#include <string>

class Student {
private:
    std::string name;
    int age;
public:
    Student(const std::string& n, int a) : name(n), age(a) {}

    void displayDetails() {
        std::cout << "Student Name: " << this->name << ", Age: " << this->age << std::endl;
    }
};

int main() {
    std::string name = "John";
    int age = 20;

    // Dynamically allocate memory for Student object
    Student* ptr_student = new Student(name, age);

    // Use this pointer to display the details
    ptr_student->displayDetails();

    // Don't forget to deallocate memory
    delete ptr_student;

    return 0;
}
