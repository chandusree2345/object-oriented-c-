#include <iostream>

class Rectangle {
private:
    double length;
    double width;

public:
    // Constructor
    Rectangle(double l = 0.0, double w = 0.0) : length(l), width(w) {}

    // Getter methods
    double getLength() const { return length; }
    double getWidth() const { return width; }

    // Method to calculate area
    double area() const {
        return length * width;
    }

    // Overloading addition operator to add areas of two rectangles
    double operator+(const Rectangle& other) const {
        return this->area() + other.area();
    }
};

int main() {
    // Demonstration of operator overloading
    Rectangle r1(5.0, 3.0);
    Rectangle r2(4.0, 6.0);

    std::cout << "Area of Rectangle r1: " << r1.area() << std::endl;
    std::cout << "Area of Rectangle r2: " << r2.area() << std::endl;

    // Adding areas of two Rectangle objects using operator overloading
    double sumAreas = r1 + r2;

    std::cout << "Sum of areas of r1 and r2: " << sumAreas << std::endl;

    return 0;
}
