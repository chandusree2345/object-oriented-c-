#include <iostream>
#include <cmath>

using namespace std;

// Function prototypes
double calculateArea(double length, double width);
double calculatePerimeter(double length, double width);

double calculateArea(double radius);
double calculatePerimeter(double radius);

double calculateArea(double side1, double side2, double side3);
double calculatePerimeter(double side1, double side2, double side3);

int main() {
    // Rectangle calculations
    double rectangleLength, rectangleWidth;
    cout << "Enter length and width of the rectangle: ";
    cin >> rectangleLength >> rectangleWidth;

    cout << "Area of the rectangle: " << calculateArea(rectangleLength, rectangleWidth) << endl;
    cout << "Perimeter of the rectangle: " << calculatePerimeter(rectangleLength, rectangleWidth) << endl;

    // Circle calculations
    double circleRadius;
    cout << "\nEnter the radius of the circle: ";
    cin >> circleRadius;

    cout << "Area of the circle: " << calculateArea(circleRadius) << endl;
    cout << "Circumference of the circle: " << calculatePerimeter(circleRadius) << endl;

    // Triangle calculations
    double triangleSide1, triangleSide2, triangleSide3;
    cout << "\nEnter the lengths of the sides of the triangle: ";
    cin >> triangleSide1 >> triangleSide2 >> triangleSide3;

    cout << "Area of the triangle: " << calculateArea(triangleSide1, triangleSide2, triangleSide3) << endl;
    cout << "Perimeter of the triangle: " << calculatePerimeter(triangleSide1, triangleSide2, triangleSide3) << endl;

    return 0;
}

